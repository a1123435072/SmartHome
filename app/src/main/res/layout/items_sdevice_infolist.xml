<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="75dp"
    android:id="@+id/item_missions_rellayout">
    <ImageView
        android:id="@+id/item_sdevice_img"
        android:layout_marginLeft="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="时间"
        android:textSize="20sp"
        android:layout_marginTop="8dp"
        android:src="@drawable/device"
        android:layout_alignParentLeft="true"/>
    <TextView
        android:id="@+id/item_sdevice_nick"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:textSize="18sp"
        android:layout_gravity="center"
        android:layout_marginTop="25dp"
        android:layout_toRightOf="@+id/item_sdevice_img"
        android:text="昵称"
        android:src="@drawable/icon_missions"/>
    <TextView
        android:id="@+id/item_sdevice_place"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:textSize="18sp"
        android:layout_marginTop="25dp"
        android:text="位置"
        android:layout_toRightOf="@+id/item_sdevice_nick"
        />
    <ImageView
        android:id="@+id/item_sdevice_select"
        android:layout_alignParentRight="true"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:layout_marginTop="17dp"
        android:layout_marginRight="15dp"
        android:src="@drawable/icon_more"/>
</RelativeLayout>


